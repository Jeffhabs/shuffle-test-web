<%= semantic_form_for [:admin, @question] do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs 'Question Detail' do %>
    <%= f.input :category %>
    <%= f.input :question_type, label: 'Type', as: :select, collection: [['Short Answer', 'short_answer'], ['Long Answer', 'long_answer'], ['Multiple Choice', 'multiple_choice']] %>
    <%= f.input :text %>
    <%= f.input :provided_language, as: :select, collection: ['Python', 'C++', 'Ruby'] %>
    <%= f.input :provided %>
  <% end %>

