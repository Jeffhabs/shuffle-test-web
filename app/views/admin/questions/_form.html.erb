  <%= f.inputs 'Answers' do %>
    <table class="answers">
      <tr>
        <th>Text</th>
        <th>Correct</th>
        <th>Remove</th>
      </tr>

      <%= f.semantic_fields_for :answers do |answer| %>
        <%= render 'answer_fields', f: answer %>
      <% end %>
    </table>

    <span class="links">
      <%= link_to_add_association 'Add Answer', f, :answers, class: 'button' %>
    </span>
  <% end %>
  -->

  <%= f.actions do %>
    <%= f.action :submit %>
    <li class="cancel"><%= link_to 'Cancel', [:admin, @question] %></li>
  <% end %>
<% end %>
